<%= form_for(task) do |f|%>
  <%= f.label :title, class: "form-label" %>
  <%= f.text_field :title, class: "form-control"%>
  <%= f.label :details, class: "form-label mt-3" %>
  <%= f.text_field :details, class: "form-control" %>
  <%= f.label :completed, class: "form-label mt-3" %>
  <%= f.check_box :completed, class: "form-check-input mt-3" %>
  <%= f.submit class:"form-control btn btn-primary mt-3"%>
<% end %>
